@model Myshop.Web.ViewModels.CategoryViewModel

@{
    ViewBag.CartManagement = "Category Management";
    ViewBag.PageTitle = "View Category";
}

<div class="container mt-5">
    <div class="card shadow-lg p-4 border-0 rounded-3">
        <div class="card-body">
            <h2 class="text-primary fw-bold">Category Details</h2>
            <hr />

            <dl class="row">
                <dt class="col-sm-4 fw-semibold text-secondary">Category Name:</dt>
                <dd class="col-sm-8">@Model.Name</dd>

                <dt class="col-sm-4 fw-semibold text-secondary">Description:</dt>
                <dd class="col-sm-8 text-muted">@Model.Description</dd>

                <dt class="col-sm-4 fw-semibold text-secondary">Created Date:</dt>
                <dd class="col-sm-8">@Model.CreatedDate.ToString("MMMM dd, yyyy")</dd>
            </dl>

            <!-- Action Buttons -->
            <div class="d-flex gap-2 mt-4">
                <a asp-action="UpdateCategory" asp-route-id="@Model?.Id" class="btn btn-warning px-4">
                    <i class="fas fa-edit"></i> Edit
                </a>
                <a asp-action="GetAllCategory" class="btn btn-secondary px-4 mx-2">
                    <i class="fas fa-list"></i> Back to List
                </a>
            </div>
        </div>
    </div>
</div>
