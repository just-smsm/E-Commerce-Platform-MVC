@model Product

@{
    ViewBag.CartManagement = "Product Management";
    ViewBag.PageTitle = "Product Details";
}

<div class="container mt-5">
    <div class="card shadow-lg p-4 border-0 rounded-3">
        <div class="row">
            <!-- Product Image Section -->
            <div class="col-md-5 text-center">
               
                <img class="product-image img-fluid rounded shadow-sm"
                     src="@Url.Content($"~/{Model.PictureUrl}")"
                     alt="@Model.Name"
                     style="max-width: 100%; height: 300px;">

            </div>

            <!-- Product Details Section -->
            <div class="col-md-7">
                <h2 class="text-primary fw-bold">@Model.Name</h2>
                <hr />

                <dl class="row">
                    <dt class="col-sm-4 fw-semibold">Name:</dt>
                    <dd class="col-sm-8">@Model.Name</dd>

                    <dt class="col-sm-4 fw-semibold">Description:</dt>
                    <dd class="col-sm-8 text-muted">@Model.Description</dd>

                    <dt class="col-sm-4 fw-semibold">Price:</dt>
                    <dd class="col-sm-8 text-success fw-bold">$@Model.Price</dd>

                    <dt class="col-sm-4 fw-semibold">Category:</dt>
                    <dd class="col-sm-8">@Model.Category.Name</dd>
                </dl>

                <!-- Action Buttons -->
                <div class="d-flex gap-2 mt-4">
                    <a asp-action="UpdateProduct" asp-route-id="@Model.Id" class="btn btn-warning px-4">
                        <i class="fas fa-edit"></i> Edit
                    </a>
                    <a asp-action="GetAllProducts" class="btn btn-secondary px-4  mx-2">
                        <i class="fas fa-list"></i> Back to List
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
