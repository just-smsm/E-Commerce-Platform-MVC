@model Myshop.Web.ViewModels.ProductViewModel


@{
    ViewBag.CartManagement = "Product Management";
    ViewBag.PageTitle = "Product Details";
    // Layout = "~/Views/Shared/_Dashboard.cshtml";
}

<h2>@Model.Name</h2>

<div>
    <h4>Product Details</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Name</dd>

        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Model.Description</dd>

        <dt class="col-sm-2">Price</dt>
        <dd class="col-sm-10">@Model.Price</dd>

        <dt class="col-sm-2">Picture</dt>
        <dd class="col-sm-10"><img src="@Model.PictureUrl" alt="Product Image" style="width: 200px; height: auto;" /></dd>

        <dt class="col-sm-2">Category</dt>
        <dd class="col-sm-10">@Model.CategoryId</dd>
    </dl>
</div>

<div>
    <a asp-action="UpdateProduct" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
    <a asp-action="GetAllProducts" class="btn btn-secondary">Back to List</a>
</div>
