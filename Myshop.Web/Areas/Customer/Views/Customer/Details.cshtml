@model Myshop.Web.Models.ShoppingCart

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="Product details for @Model.Product.Name" />
    <meta name="author" content="MyShop" />
    <title>@Model.Product.Name - MyShop</title>
    <!-- Favicon-->
    <link rel="icon" type="image/x-icon" href="~/CustomerDetails/assets/favicon.ico" />
    <!-- Bootstrap icons-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.0/font/bootstrap-icons.css" rel="stylesheet" />
    <!-- Core theme CSS (includes Bootstrap)-->
    <link href="~/CustomerDetails/css/styles.css" rel="stylesheet" />
</head>
<body>
    <!-- Product Details Form -->
    <form method="post">
        <section class="product-details py-5">
            <div class="container px-4 px-lg-5 my-5">
                <div class="row gx-4 gx-lg-5 align-items-center">
                    <!-- Product Image -->
                    <div class="col-md-6">
                        <div class="product-image-wrapper">
                            <img class="product-image img-fluid rounded shadow-sm" src="~/@Model.Product.PictureUrl" alt="@Model.Product.Name" />
                        </div>
                    </div>
                    <!-- Product Info -->
                    <div class="col-md-6">
                        <div class="product-info">
                            <small class="text-muted">SKU: BST-498</small>
                            <h1 class="display-5 fw-bold mt-2">@Model.Product.Name</h1>
                            <div class="price-section mb-3">
                                <span class="text-muted text-decoration-line-through">$45.00</span>
                                <span class="fw-bold ms-2 text-success">@Model.Product.Price</span>
                            </div>
                            <p class="product-description lead">@Model.Product.Description</p>
                            <div class="quantity-and-cart d-flex align-items-center">
                                <label for="inputQuantity" class="me-3 fw-semibold">Quantity:</label>
                                <input class="form-control text-center me-3" id="inputQuantity" asp-for="Count" style="max-width: 4rem;" />
                                <button class="btn btn-dark flex-shrink-0" type="submit">
                                    <i class="bi-cart-fill me-1"></i> Add to Cart
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </form>

    <!-- Additional Features Section -->
    <section class="additional-features bg-light py-4">
        <div class="container">
            <div class="row text-center">
                <div class="col-lg-4 col-md-6 mb-4">
                    <i class="bi-truck fs-2 text-primary mb-2"></i>
                    <h5 class="fw-bold">Free Shipping</h5>
                    <p class="text-muted">Enjoy free shipping on orders over $50.</p>
                </div>
                <div class="col-lg-4 col-md-6 mb-4">
                    <i class="bi-arrow-repeat fs-2 text-primary mb-2"></i>
                    <h5 class="fw-bold">Easy Returns</h5>
                    <p class="text-muted">Hassle-free returns within 30 days of purchase.</p>
                </div>
                <div class="col-lg-4 col-md-6 mb-4">
                    <i class="bi-shield-check fs-2 text-primary mb-2"></i>
                    <h5 class="fw-bold">Secure Payment</h5>
                    <p class="text-muted">Your payment information is safe with us.</p>
                </div>
            </div>
        </div>
    </section>

  
    <!-- Bootstrap core JS-->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Core theme JS-->
    <script src="~/CustomerDetails/js/scripts.js"></script>
</body>
</html>
