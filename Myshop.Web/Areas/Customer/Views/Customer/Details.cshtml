@model Myshop.Web.Models.ShoppingCart

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="Product details for @Model.Product.Name" />
    <meta name="author" content="MyShop" />
    <title>@Model.Product.Name - MyShop</title>

    <!-- Favicon -->
    <link rel="icon" type="image/x-icon" href="~/CustomerDetails/assets/favicon.ico" />

    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.0/font/bootstrap-icons.css" rel="stylesheet" />

    <!-- Core Theme CSS (Includes Bootstrap) -->
    <link href="~/CustomerDetails/css/styles.css" rel="stylesheet" />
</head>
<body>

    <!-- Product Details Section -->
    <section class="product-details py-5">
        <div class="container px-4 px-lg-5 ">
            <div class="row product-detail gx-4 gx-lg-5 align-items-center">
                <!-- Product Image -->
                <div class="col-md-6">
                    <div class="product-image-wrapper shadow-sm rounded">
                        <img class="product-image img-fluid rounded" src="~/@Model.Product.PictureUrl" 
                             alt="@Model.Product.Name" style="max-width: 100%; " />
                    </div>
                </div>

                <!-- Product Info -->
                <div class="col-md-6">
                    <div class="product-info p-3">
                        <small class="text-muted">SKU: BST-498</small>
                        <h1 class="display-5 fw-bold mt-2 text-primary">@Model.Product.Name</h1>

                        <!-- Display Category Name -->
                        <p class="fw-semibold text-muted">Brand: <span class="text-info">@Model.Product.Category.Name</span></p>

                        <!-- Price Section -->
                        <div class="price-section mb-3">
                            <span class="fw-bold ms-2 text-success fs-4">$@Model.Product.Price</span>
                        </div>

                        <p class="product-description lead">@Model.Product.Description</p>

                        <!-- Quantity & Add to Cart -->
                        <form method="post">
                            <div class="d-flex align-items-center mb-3">
                                <label for="inputQuantity" class="me-3 fw-semibold">Quantity:</label>
                                <input class="form-control text-center me-3" id="inputQuantity" asp-for="Count"
                                       style="max-width: 4rem;" type="number" min="1" max="10" value="1" />
                            </div>
                            <button class="btn btn-lg btn-info w-100 shadow mb-2" type="submit">
                                <i class="bi-cart-fill me-2"></i> Add to Cart
                            </button>
                            <a href="https://localhost:7102/Customer/Customer/Index" class="btn btn-lg btn-secondary w-100 shadow">
                                <i class="bi-arrow-left me-2"></i> Back to Home
                            </a>
                        </form>
                    </div>
                </div>

            </div>
        </div>
    </section>

    <!-- Additional Features Section -->
    <section class="additional-features bg-light py-4">
        <div class="container">
            <div class="row text-center">
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="feature-box p-3 shadow-sm rounded bg-white">
                        <i class="bi-truck fs-2 text-primary mb-2"></i>
                        <h5 class="fw-bold">Free Shipping</h5>
                        <p class="text-muted">Enjoy free shipping on orders over $50.</p>
                    </div>
                </div>

                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="feature-box p-3 shadow-sm rounded bg-white">
                        <i class="bi-arrow-repeat fs-2 text-primary mb-2"></i>
                        <h5 class="fw-bold">Easy Returns</h5>
                        <p class="text-muted">Hassle-free returns within 30 days of purchase.</p>
                    </div>
                </div>

                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="feature-box p-3 shadow-sm rounded bg-white">
                        <i class="bi-shield-check fs-2 text-primary mb-2"></i>
                        <h5 class="fw-bold">Secure Payment</h5>
                        <p class="text-muted">Your payment information is safe with us.</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>

<!-- Custom CSS -->
<style>
    /* General Styles */
    .container {
        max-width: 1200px;
    }

    /* Product Image */
    .product-image-wrapper {
        border-radius: 10px;
        overflow: hidden;
    }

    .product-image {
        height :400px;
        width: 100%;
        border-radius: 10px;
        transition: transform 0.3s ease-in-out;
    }

    .product-image:hover {
        transform: scale(1.05);
    }

    /* Product Info */
    .product-info {
        background-color: #fff;
        border-radius: 10px;
        padding: 20px;
        box-shadow: 0px 5px 15px rgba(0, 0, 0, 0.1);
    }

    .price-section {
        font-size: 1.2rem;
    }

    /* Add to Cart Button */
    .btn-success {
        font-size: 1.2rem;
        padding: 12px;
        border-radius: 8px;
    }

    .product-detail{
        box-shadow: box-shadow: rgba(0, 0, 0, 0.35) 0px 5px 15px;
    }

    .product-detail {
        box-shadow: rgba(0, 0, 0, 0.35) 0px 5px 15px;
        border-radius: 10px;
        background: white;
        padding: 20px;
        transition: all 0.3s ease-in-out;
    }

        .product-detail:hover {
            transform: translateY(-5px);
            box-shadow: rgba(0, 0, 0, 0.45) 0px 10px 20px;
        }

    .btn-success:hover {
        background-color: #28a745;
        transform: scale(1.03);
    }

    /* Feature Boxes */
    .feature-box {
        background: white;
        transition: all 0.3s ease-in-out;
    }

    .feature-box:hover {
        transform: translateY(-5px);
        box-shadow: 0px 5px 15px rgba(0, 0, 0, 0.1);
    }

   
</style>
