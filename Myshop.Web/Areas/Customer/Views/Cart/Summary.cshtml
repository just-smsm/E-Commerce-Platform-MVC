@using Myshop.Web.ViewModels
@model ShoppinCartViewModel

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/MaterialDesign-Webfont/5.3.45/css/materialdesignicons.css" integrity="sha256-NAxhqDvtY0l4xn+YVa6WjAcmd94NNfttjNsDmNatFVc=" crossorigin="anonymous" />
<link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>

<div class="container">
    <div class="row">
        <div class="col-xl-8">
            <div class="card">
                <div class="card-body">
                    <ol class="activity-checkout mb-0 px-4 mt-3">
                        <li class="checkout-item">
                            <div class="avatar checkout-icon p-1">
                                <div class="avatar-title rounded-circle bg-primary">
                                    <i class="bx bxs-receipt text-white font-size-20"></i>
                                </div>
                            </div>
                            <div class="feed-item-list">
                                <h5 class="font-size-16 mb-1">Billing Info</h5>
                                <form asp-action="Summary" method="post">
                                    <div class="mb-3">
                                        <label class="form-label" for="billing-name">Name</label>
                                        <input type="text" class="form-control" id="billing-name" name="OrderHeader.DisplayName" placeholder="Enter name" value="@Model.OrderHeader.DisplayName" required />
                                    </div>
                                    <div class="mb-3">
                                        <label class="form-label" for="billing-email">City</label>
                                        <input type="text" class="form-control" id="billing-email" name="OrderHeader.City" placeholder="Enter City" value="@Model.OrderHeader.City" required />
                                    </div>
                                    <div class="mb-3">
                                        <label class="form-label" for="billing-phone">Phone</label>
                                        <input type="tel" class="form-control" id="billing-phone" name="OrderHeader.Phone" placeholder="Enter Phone no." value="@Model.OrderHeader.Phone" required />
                                    </div>
                                    <div class="mb-3">
                                        <label class="form-label" for="billing-address">Address</label>
                                        <textarea class="form-control" id="billing-address" name="OrderHeader.Address" rows="3" placeholder="Enter full address" required>@Model.OrderHeader.Address</textarea>
                                    </div>
                                    <div class="row">
                                        <div class="col-lg-6">
                                            <label class="form-label" for="billing-country">Country</label>
                                            <select class="form-control" id="billing-country" name="OrderHeader.Country" title="Country" required>
                                                <option value="">Select Country</option>
                                                <option value="AF">Afghanistan</option>
                                                <option value="AL">Albania</option>
                                                <option value="DZ">Algeria</option>
                                                <!-- Add other countries as needed -->
                                            </select>
                                        </div>
                                        <div class="col-lg-6">
                                            <label class="form-label" for="billing-city">City</label>
                                            <input type="text" class="form-control" id="billing-city" name="OrderHeader.City" placeholder="Enter City" value="@Model.OrderHeader.City" required />
                                        </div>
                                    </div>
                                    <div class="row my-4">
                                        <div class="col">
                                            <a href="ecommerce-products.html" class="btn btn-link text-muted">
                                                <i class="mdi mdi-arrow-left me-1"></i> Continue Shopping
                                            </a>
                                        </div>
                                        <div class="col text-end mt-2 mt-sm-0">
                                            <button type="submit" class="btn btn-success">
                                                <i class="mdi mdi-cart-outline me-1"></i> Proceed
                                            </button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </li>
                    </ol>
                </div>
            </div>
        </div>
        <div class="col-xl-4">
            <div class="card checkout-order-summary">
                <div class="card-body">
                    <div class="p-3 bg-light mb-3">
                        <h5 class="font-size-16 mb-0">Order Summary <span class="float-end ms-2">#MN0124</span></h5>
                    </div>
                    <div class="table-responsive">
                        <table class="table table-centered mb-0 table-nowrap">
                            <thead>
                                <tr>
                                    <th class="border-top-0" style="width: 110px;">Product Image</th>
                                    <th class="border-top-0">Product Desc</th>
                                    <th class="border-top-0">Price</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.ShoppingCarts)
                                {
                                    <tr>
                                        <th scope="row">
                                            <img src="@Url.Content("~/" + item.Product.PictureUrl)" alt="product-img" width="100px" height="100px" class="avatar-lg rounded" />
                                        </th>
                                        <td>
                                            <h5 class="font-size-16 text-truncate">
                                                <a href="#" class="text-dark">@item.Product.Name</a>
                                            </h5>
                                            <p class="text-muted mb-0 mt-1">
                                                @item.Product.Price x @item.Count
                                            </p>
                                        </td>
                                        <td>@(item.Product.Price * item.Count)</td>
                                    </tr>
                                }
                                <tr>
                                    <td colspan="2">
                                        <h5 class="font-size-14 m-0">Total :</h5>
                                    </td>
                                    <td>@Model.TotalPrice</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    body {
        margin-top: 20px;
        background-color: #f1f3f7;
    }

    .card {
        margin-bottom: 24px;
        box-shadow: 0 2px 3px #e4e8f0;
        border-radius: 1rem;
    }

    .activity-checkout {
        list-style: none;
    }

    .avatar {
        height: 3rem;
        width: 3rem;
    }
</style>
