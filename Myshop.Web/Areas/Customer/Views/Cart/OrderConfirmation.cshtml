@model Myshop.Web.Models.OrderHeader

<div class="container d-flex justify-content-center align-items-center vh-100">
    <div class="order-confirmation-card text-center">
  
        <h2 class="text-success fw-bold mt-1">Thank You for Your Order!</h2>
        <p class="lead text-muted">Your order has been successfully placed.</p>

        <!-- Order Image -->
        <img src="~/img/Confirm3.jpg" class="order-image img-fluid mb-3" alt="Order Confirmation" />

        <!-- Order Details -->
        <p class="h5 mb-3">Order Total: <strong class="text-danger">@Model.TotalPrice.ToString("C")</strong></p>

        <!-- Action Buttons -->
        <div class="d-flex justify-content-center">
            <a asp-controller="customer" asp-action="Index" class="btn btn-outline-secondary">
                <i class="fas fa-shopping-cart"></i> Continue Shopping
            </a>
        </div>
    </div>
</div>

@section Styles {
    <style>
        body {
            background-color: #f8f9fa;
        }

        .order-confirmation-card {
            background: white;
            padding: 40px;
            border-radius: 12px;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
            width: 500px;
            text-align: center;
        }

        .checkmark-circle {
            width: 80px;
            height: 80px;
            background: #28a745;
            color: white;
            font-size: 36px;
            display: flex;
            align-items: center;
            justify-content: center;
            border-radius: 50%;
            margin: 0 auto;
            animation: popIn 0.5s ease-in-out;
        }

  

        .order-image {
            max-width: 80%;
            border-radius: 10px;
            box-shadow: 0px 2px 6px rgba(0, 0, 0, 0.2);
        }

        .btn {
            padding: 10px 20px;
            font-size: 16px;
        }

        .btn i {
            margin-right: 5px;
        }
    </style>
}
