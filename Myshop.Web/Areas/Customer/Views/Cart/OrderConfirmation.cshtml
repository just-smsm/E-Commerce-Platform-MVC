@model Myshop.Web.Models.OrderHeader

<div class="container text-center">
    <div class="row mb-4">
        <div class="col-12">
            <h3 class="text-info">Thank You!</h3>
        </div>
    </div>

    <div class="row justify-content-center mb-4">
        <div class="col-md-6">
            <img src="~/img/Confirm3.jpg" class="img-fluid" alt="Order Confirmation" />
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <h2>Your order number <strong>@Model.Id</strong> has been successfully placed!</h2>
            <p class="h5">Order Total: <strong style="color:red">@Model.TotalPrice.ToString("C")</strong></p>
            <!-- Add more details as needed -->
        </div>
    </div>
</div>

@section Styles {
    <style>
        .text-info {
            font-weight: bold; /* Makes the title stand out */
        }

        img {
            max-width: 100%; /* Ensures responsive image */
            height: auto; /* Maintains aspect ratio */
        }
    </style>
}
