@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot Password?";
}

<style>
    body {
        background-color: #f8f9fa; /* Light gray background */
    }

    .forgot-password-container {
        max-width: 400px;
        margin: 50px auto;
        padding: 30px;
        background: white;
        border-radius: 10px;
        box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
    }

    .form-floating input {
        padding-left: 40px; /* Space for the icon */
    }

    .input-icon {
        position: absolute;
        left: 15px;
        top: 50%;
        transform: translateY(-50%);
        font-size: 18px;
        color: #6c757d;
    }

    .btn-primary {
        background-color: #007bff;
        border: none;
        transition: 0.3s;
    }

        .btn-primary:hover {
            background-color: #0056b3;
        }
</style>

<div class="forgot-password-container">
    <h2 class="text-center mb-3">@ViewData["Title"]</h2>
    <p class="text-center text-muted">Enter your email, and we’ll send you a link to reset your password.</p>
    <hr />

    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

    <form method="post">
        <div class="form-floating position-relative mb-3">
            <i class="fas fa-envelope input-icon"></i>
            <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
            <label asp-for="Input.Email" class="form-label"></label>
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>
        <button type="submit" class="w-100 btn btn-lg btn-primary">Send Reset Link</button>
    </form>

    <div class="text-center mt-3">
        <a asp-page="./Login" class="text-muted">Back to Login</a>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
