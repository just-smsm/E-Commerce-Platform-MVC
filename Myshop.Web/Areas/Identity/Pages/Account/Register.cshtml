@page
@model RegisterModel
@{
    ViewData["Title"] = "Register Now :";
}

<h1 class="text-center mb-5 text-info">@ViewData["Title"]</h1>

<div class="row d-flex justify-content-around">
    <!-- Registration Form -->
    <div class="col-md-4">
        <form id="registerForm" method="post" asp-route-returnUrl="@Model.ReturnUrl">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

            <!-- Display Name Input -->
            <div class="form-floating mb-3">
                <input asp-for="Input.DisplayName" class="form-control" autocomplete="off" required placeholder="Name" />
                <label asp-for="Input.DisplayName">Display Name</label>
                <span asp-validation-for="Input.DisplayName" class="text-danger"></span>
            </div>

            <!-- City Input -->
            <div class="form-floating mb-3">
                <input asp-for="Input.City" class="form-control" autocomplete="off" required placeholder="City" />
                <label asp-for="Input.City">City</label>
                <span asp-validation-for="Input.City" class="text-danger"></span>
            </div>

            <!-- Address Input -->
            <div class="form-floating mb-3">
                <input asp-for="Input.Address" class="form-control" autocomplete="off" required placeholder="Address" />
                <label asp-for="Input.Address">Address</label>
                <span asp-validation-for="Input.Address" class="text-danger"></span>
            </div>

            <!-- Phone Input -->
            <div class="form-floating mb-3">
                <input asp-for="Input.Phone" class="form-control" autocomplete="off" required placeholder="Phone" />
                <label asp-for="Input.Phone">Phone</label>
                <span asp-validation-for="Input.Phone" class="text-danger"></span>
            </div>

            <!-- Email Input -->
            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" required placeholder="name@example.com" />
                <label asp-for="Input.Email">Email</label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <!-- Password Input -->
            <div class="form-floating mb-3">
                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" required placeholder="Password" />
                <label asp-for="Input.Password">Password</label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

            <!-- Confirm Password Input -->
            <div class="form-floating mb-3">
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" required placeholder="Confirm Password" />
                <label asp-for="Input.ConfirmPassword">Confirm Password</label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>

            <!-- Role Selection for Admins -->
            @if (User.IsInRole("Admin"))
            {
                <div class="mb-3">
                    <label for="RoleMenus">Select Role</label>
                    <select id="RoleMenus" name="RoleMenus" class="form-control">
                        <option value="Admin">Admin</option>
                        <option value="Editor">Editor</option>
                        <option value="Customer">Customer</option>
                    </select>
                </div>
            }

            <!-- Submit Button -->
            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">
                @if (User.IsInRole("Admin"))
                {
                    <text>Add User</text>
                }
                else
                {
                    <text>Register</text>
                }
            </button>
        </form>
    </div>

    <!-- Image Section -->
    <div class="col-md-6 d-flex justify-content-center align-items-center">
        <section class="image-container">
            <img src="~/img/login2.jpg" alt="login" class="full-width-image" />
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>
    .full-width-image {
        width: 100%;
        height: 500px; /* Maintain the height */
        object-fit: cover; /* Crop the image if necessary while preserving aspect ratio */
        margin: 0; /* Remove margin */
        padding: 0; /* Remove padding */
    }

    .image-container {
        margin: 0; /* No margin on the image container */
        padding: 0; /* No padding on the image container */
    }
</style>
